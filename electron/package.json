{
  "name": "unhinged-universal-system",
  "version": "1.0.0",
  "description": "Universal System - LLM-Native Desktop Application",
  "main": "dist/main.js",
  "author": "Unhinged Universal System",
  "license": "MIT",
  "private": true,
  
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.renderer.js --mode production",
    "build:watch": "tsc -p tsconfig.main.json --watch",
    "electron:dev": "wait-on dist/main.js && electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run build && electron-builder",
    "clean": "rimraf dist build",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest"
  },
  
  "dependencies": {
    "electron": "^28.0.0",
    "yaml": "^2.3.4",
    "axios": "^1.6.2",
    "ws": "^8.14.2"
  },
  
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.8.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "html-webpack-plugin": "^5.5.3"
  },
  
  "build": {
    "appId": "com.unhinged.universal-system",
    "productName": "Universal System",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "linux": {
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  
  "engines": {
    "node": ">=18.0.0"
  }
}
