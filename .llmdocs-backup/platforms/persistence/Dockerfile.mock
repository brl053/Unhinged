# =============================================================================
# Unhinged Persistence Platform - Mock Service
# =============================================================================
#
# Temporary mock service providing health endpoints
# until the full Java/Kotlin implementation is ready.
#

FROM python:3.11-alpine

# Metadata
LABEL maintainer="Unhinged Team"
LABEL version="1.0.0-mock"
LABEL description="Unhinged Persistence Platform - Mock Service"

# Set working directory
WORKDIR /app

# Copy mock server
COPY simple-server.py /app/simple-server.py

# Make script executable
RUN chmod +x /app/simple-server.py

# Expose ports
EXPOSE 8090

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8090/api/v1/health || exit 1

# Install curl for health checks
RUN apk add --no-cache curl

# Start the mock server
CMD ["python3", "/app/simple-server.py"]
