{
  "name": "@unhinged/presentation-gateway",
  "version": "1.0.0",
  "description": "Protocol translation gateway between web clients and gRPC backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "proto:gen": "npm run proto:clean && npm run proto:build",
    "proto:clean": "rm -rf src/generated",
    "proto:build": "mkdir -p src/generated && protoc --plugin=protoc-gen-ts_proto=../../node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/generated --ts_proto_opt=esModuleInterop=true --ts_proto_opt=forceLong=string --ts_proto_opt=useOptionals=messages --ts_proto_opt=outputServices=grpc-js --proto_path=../../proto ../../proto/*.proto",
    "gateway:gen": "tsx src/tools/gateway-generator.ts",
    "docs:gen": "tsx src/tools/openapi-generator.ts"
  },
  "keywords": [
    "grpc",
    "gateway",
    "rest",
    "websocket",
    "sse",
    "protocol-translation"
  ],
  "author": "Unhinged Team",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.10",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "ts-proto": "^1.165.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}